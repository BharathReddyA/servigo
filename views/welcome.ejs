  <body>
    <nav
      class="navbar navbar-expand-md bg-dark navbar-dark sticky-top custom-nav"
    >
      <a class="navbar-brand" href="#">Navbar</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#collapsibleNavbar"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div
        class="collapse navbar-collapse flex-row-reverse"
        id="collapsibleNavbar"
      >
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="./">Link</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="./signin.html">Link</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="./login.html">Link</a>
          </li>
        </ul>
      </div>
    </nav>
    <div id="spokenText"></div>
    <div class="container my-2">
      <div class="row">
        <div class="col-lg-6 my-5">
          <div class="card user-container pl-5">
            <h1 class="brand-name">Welcome, <%= user.name %>!</h1>
            <div>
              <p class="brand-caption">
                <strong>Name:</strong> <%= user.name %>
              </p>
              <p class="brand-caption">
                <strong>Username:</strong> <%= user.username %>
              </p>
              <p class="brand-caption">
                <strong>Phone:</strong> <%= user.phone %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-lg-6 my-5">
          <div class="user-container">
            <div class="brand-name">User payment details</div>
            <div class="brand-caption mb-2 pl-5">Name:</div>
            <div class="brand-caption mb-2 pl-5">card number:</div>
            <div class="brand-caption mb-1 pl-5">exp date:</div>
            <div class="brand-caption pl-5">change method</div>
          </div>
        </div>
      </div>
    </div>
    <div class="container my-3">
      <div class="row">
        <div class="col-lg-6">
          <h3>Post a new service</h3>
          <form action="/userNewService" method="get">
            <button type="submit" class="submit-btn-req">Submit here</button>
          </form>
        </div>
        <div class="col-lg-6">
          <h3>check the status of the service</h3>
          <form action="/userPreviousService" method="get">
            <button type="submit" class="submit-btn-req">Submit here</button>
          </form>
        </div>
      </div>
    </div>
    <script>
      // Retrieve the spoken text from local storage
      var spokenText = localStorage.getItem("spokenText");

      // Display the spoken text
      var spokenTextElement = document.getElementById("spokenText");
      spokenTextElement.textContent = spokenText;
